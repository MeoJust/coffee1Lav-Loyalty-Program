<Window x:Class="adminWPF.windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adminWPF.windows"
        xmlns:VM="clr-namespace:adminWPF.vm"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="Transparent"
    AllowsTransparency="True">

    <Window.DataContext>
        <VM:MainVM/>
    </Window.DataContext>
    

    <Grid>

        <Image Source="D:\_art\_csharp\coffeOneLoveProj\_background\03_chooseIMG.jpg"
               Stretch="Fill" />

        <Border MouseDown="Window_MouseDown"
        Background="Transparent"
            CornerRadius="20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Name="adminTXT"
                    Text="Работничек"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Wheat"
                       FontFamily="comic sans ms"
                       FontSize ="22"
                       />

                <StackPanel Grid.Row="1">


                    <RadioButton Content="Бонусы"
                             Height="25"
                             Foreground="Yellow"
                             IsChecked="True"
                             FontFamily="comic sans ms"
                             FontSize ="17"
                             Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding BonusVC}"/>

                    <RadioButton Content="Уведомления"
                             Height="25"
                             Foreground="Yellow"
                             FontFamily="comic sans ms"
                             FontSize ="17"
                             Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding NotifiVC}"/>

                    <RadioButton Content="Выход"
                             Height="25"
                             Foreground="Yellow"
                             FontFamily="comic sans ms"
                             FontSize ="17"
                             Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding ExitVC}"/>

                </StackPanel>

                <TextBlock Text="Окно"
                       FontFamily="comic sans ms"
                       FontSize ="22"
                       Foreground="Wheat"
                       TextAlignment="Center"
                Width="250"
                     Height="40"
                     Background="Transparent"
                     HorizontalAlignment="Left"
                     Margin="10"
                     Grid.Column="1"/>

                <ContentControl
                Grid.Row ="1"
                Grid.Column="1"
                Margin="10"
                Content="{Binding CurrentView}"/>

                <ListView Name="usersLV"
                Grid.Column="2" 
                      Grid.Row="1" 
                      d:ItemsSource="{d:SampleData ItemCount=25}"
                       Margin="10,61,10,44"
                      Background="Transparent"
                      Foreground="Yellow"
                      FontSize="12"
                      SelectionChanged="usersLV_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Id}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock x:Name="idTXT"
                Grid.Column="2" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0" 
                Grid.Row="1" 
                TextWrapping="Wrap"  
                VerticalAlignment="Top"
                TextAlignment="Left"
                Background="Transparent"
                Foreground="Wheat"
                FontFamily="comic sans ms"
                FontSize="12"
                Height="46" Width="280"/>
                
                <ContentControl x:Name="contentControl"
                Grid.Row ="1"
                Grid.Column="1"
                Margin="10"
                Content="{Binding CurrentView}"/>

            </Grid>
        </Border>
    </Grid>
</Window>
