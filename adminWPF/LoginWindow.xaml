<Window x:Class="adminWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adminWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="loginTXT" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap" Text="login" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="passwordTXT" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap" Text="password" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="loginBTN" Content="let me in!" Click="loginBTN_Click" HorizontalAlignment="Left" Margin="360,197,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
